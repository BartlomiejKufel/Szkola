<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlyoutDemo.GalleryPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Galeria"
                
                HorizontalOptions="CenterAndExpand" />
            <CarouselView x:Name="photosCarouselView" HeightRequest="300">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Image Source="{Binding Filename}" />
                            <Label Text="{Binding Title}" />
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <StackLayout Orientation="Horizontal">
                <Button Text="Poprzedni" x:Name="previousButton" Clicked="previousButton_Clicked" HorizontalOptions="StartAndExpand"/>
                <Button Text="Następny" x:Name="nextButton" Clicked="nextButton_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>