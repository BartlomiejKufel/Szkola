<Window x:Class="FirstApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnStart" Click="btnStart_Click" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Top" Height="56" Width="154" Margin="0,119,0,0" Foreground="#FFEAC5C5" BorderBrush="#FFD40000" IsEnabled="False">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFD80F0F" Offset="1"/>
                    <GradientStop Color="#FF845F5F"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        
        

        <Button x:Name="btnCzas" MouseEnter="btnCzas_MouseEnter" MouseLeave="btnCzas_MouseLeave" Content="Czas" HorizontalAlignment="Center" VerticalAlignment="Top" Height="56" Width="154" Margin="0,217,0,0"/>
        <Button x:Name="btnAktualizuj" Content="uaktywnij" Click="btnAktualizuj_Click" HorizontalAlignment="Left" Margin="84,186,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
