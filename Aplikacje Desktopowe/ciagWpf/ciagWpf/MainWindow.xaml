<Window x:Class="ciagWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ciagWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid Margin="20,10">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Center">
            <Button Content="Policz długość opisu ciągu A" Click="Button_Click" FontSize="20"/>

        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Długość opisu ciągu A: " FontSize="18"/>
            <TextBox FontSize="16" x:Name="resultTextBox"/>
        </StackPanel>
    </Grid>
</Window>
