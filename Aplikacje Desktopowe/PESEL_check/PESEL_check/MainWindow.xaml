<Window x:Class="PESEL_check.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PESEL_check"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="250">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Text="Podaj numer PESEL do sprawdzenia"/>
            <TextBox x:Name="inputTextBox"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="20">
            <Button Content="Sprawdź" Click="Button_Click"/>
        </StackPanel>
            



    </Grid>
</Window>
