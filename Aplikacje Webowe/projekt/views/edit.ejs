<%- include('./includes/header.ejs') %> 
<%- include('./includes/navigation.ejs') %> 
    

    <main>
        <div>
            <h2>Edycja użytkownika</h2>
                
            <form action="/update" method="post" class="addForm">
                <div class="control">
                    <label for="firstname">Imię</label>
                    <input type="text" name="firstname" id="firstname" required value="<%= user.firstname %> ">
                </div>

                <div class="control">
                    <label for="lastname">Nazwisko</label>
                    <input type="text" name="lastname" id="lastname" required value="<%= user.lastname %>">
                </div>
                
                <div class="control">
                    <label for="birthdate">Data urodzenia</label>
                    <input type="date" name="birthdate" id="birthdate"  value="<%= birthdateStr %>" required>
                </div>

                <div class="control">
                    <label for="active">Konto aktywny</label>
                    <input type="checkbox" name="active" id="active" <%= user.active ? "checked" : "" %> >
                </div>

                <div class="control">
                    <label for="active">Płeć</label><br>
                    <label><input type="radio" name="sex" value="M"<%= user.sex ==="Mężczyzna"? "checked":"" %> >Mężczyzna</label><br>
                    <label><input type="radio" name="sex" value="K"<%= user.sex ==="Kobieta"? "checked":"" %>>Kobieta</lable><br>
                    <label><input type="radio" name="sex" value="I"<%= user.sex ==="Inne"? "checked":"" %>>Inne</lable>

                </div>

                <input type="hidden" name="userId" value="<%= user.id %>">
                <button type="submit">Anuluj</button>
                <button type="submit" value="applyBtn" name="applyBtn">Zatwierdź zmiany</button>

            </form>
        </div>

    </main>
    
    
<%- include('./includes/footer.ejs') %> 
    